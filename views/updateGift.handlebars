<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-5'>
      <h2>Update Gift</h2>
      <small id='updateGiftHelp' class='form-text text-muted'>NOTE: Both the receipient and description fields cannot be blank.</small>
      <form class='form updateGiftForm'>
        <div class='form-group'>
          <label for='email-login'>Recipient</label>
          <input type='text' class='form-control' id='giftGiftee' value='{{gift.recipientName}}'>
        </div>
        <div class='form-group'>
          <label for='password-login'>Description</label>
          <input type='text' class='form-control' id='giftDescription' value='{{gift.description}}'>
        </div>
        <div class='form-group'>
          <label class="switch">Purchased</label>
          <input type="checkbox" id="giftPurchased" {{#if gift.purchased}}checked{{/if}}>
        </div>
        <button class='btn btn-primary submit' id='giftSave' type='submit'>Save</button>
        <button class='btn btn-primary submit' id='giftCancel' type='submit'>Cancel</button>
      </form>
    </div>
  </div>
</div>

<script src="/js/updategift.js"></script>
