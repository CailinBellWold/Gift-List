<div class="row">
  <div class="col-auto">
    <h2>Welcome!</h2>
  </div>
</div>

  {{#if gifts.length}}
  <div class="col-md-6 project-list">
    <h3>Gifts</h3>

    {{#each gifts as |gift|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/gift/{{gift.id}}">{{gift.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{gift.id}}">UPDATE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/userlanding.js"></script>